<div class="row">
  <div class="col-12">
    <h1>🏈 Sleeper League Analytics</h1>
    <p class="text-muted">Comprehensive analysis of your fantasy football league history</p>
  </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card bg-primary text-white">
      <div class="card-body">
        <h5 class="card-title">Total Seasons</h5>
        <h2><%= @leagues.count %></h2>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-success text-white">
      <div class="card-body">
        <h5 class="card-title">League Members</h5>
        <h2><%= @total_users %></h2>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-info text-white">
      <div class="card-body">
        <h5 class="card-title">Total Matchups</h5>
        <h2><%= @total_matchups %></h2>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-warning text-dark">
      <div class="card-body">
        <h5 class="card-title">Transactions</h5>
        <h2><%= @total_transactions %></h2>
      </div>
    </div>
  </div>
</div>

<!-- Quick Navigation -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5>Quick Analytics</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-3">
            <%= link_to sleeper_analytics_path, class: "btn btn-outline-primary btn-lg w-100 mb-2" do %>
              📊 League Overview
            <% end %>
          </div>
          <div class="col-md-3">
            <%= link_to draft_analysis_sleeper_analytics_path, class: "btn btn-outline-success btn-lg w-100 mb-2" do %>
              🎯 Draft Analysis
            <% end %>
          </div>
          <div class="col-md-3">
            <%= link_to team_performance_sleeper_analytics_path, class: "btn btn-outline-info btn-lg w-100 mb-2" do %>
              📈 Team Performance
            <% end %>
          </div>
          <div class="col-md-3">
            <%= link_to player_performance_sleeper_analytics_path, class: "btn btn-outline-warning btn-lg w-100 mb-2" do %>
              🏃 Player Analysis
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <%= link_to transaction_analysis_sleeper_analytics_path, class: "btn btn-outline-secondary btn-lg w-100 mb-2" do %>
              💼 Transaction Analysis
            <% end %>
          </div>
          <div class="col-md-3">
            <%= link_to player_charts_sleeper_analytics_path, class: "btn btn-outline-dark btn-lg w-100 mb-2" do %>
              📊 Interactive Charts
            <% end %>
          </div>
          <div class="col-md-3">
            <%= link_to draft_spending_charts_sleeper_analytics_path, class: "btn btn-outline-warning btn-lg w-100 mb-2" do %>
              💰 Draft Spending
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Seasons Overview -->
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5>Seasons Summary</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Season</th>
                <th>League Name</th>
                <th>Status</th>
                <th>Teams</th>
                <th>Matchups</th>
                <th>Drafts</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @leagues.each do |league| %>
                <tr>
                  <td>
                    <strong><%= league.season %></strong>
                  </td>
                  <td><%= league.name %></td>
                  <td>
                    <span class="badge bg-<%= league.status == 'complete' ? 'success' : 'primary' %>">
                      <%= league.status.humanize %>
                    </span>
                  </td>
                  <td><%= league.sleeper_rosters.count %></td>
                  <td><%= league.sleeper_matchups.count %></td>
                  <td><%= league.sleeper_drafts.count %></td>
                  <td>
                    <%= link_to "View Details", sleeper_analytic_path(league), class: "btn btn-sm btn-outline-primary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 2025 Draft Preparation Section -->
<div class="row mt-4">
  <div class="col-12">
    <div class="card border-warning">
      <div class="card-header bg-warning text-dark">
        <h5>🚀 2025 Draft Preparation</h5>
      </div>
      <div class="card-body">
        <p class="card-text">Use your historical data to gain insights for the upcoming 2025 draft:</p>
        <div class="row">
          <div class="col-md-4">
            <h6>📊 Performance Trends</h6>
            <p>Analyze which draft strategies have worked best in your league</p>
          </div>
          <div class="col-md-4">
            <h6>🎯 Position Value</h6>
            <p>Identify which positions provide the most value at different draft positions</p>
          </div>
          <div class="col-md-4">
            <h6>💡 League Insights</h6>
            <p>Understand your league mates' tendencies and draft patterns</p>
          </div>
        </div>
        <div class="mt-3">
          <%= link_to draft_analysis_sleeper_analytics_path, class: "btn btn-warning me-2" do %>
            Start Draft Analysis
          <% end %>
          <%= link_to team_performance_sleeper_analytics_path, class: "btn btn-outline-warning" do %>
            View Team Trends
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
